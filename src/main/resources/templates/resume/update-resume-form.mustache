{{> layout/header}}

<style>
    /* 이력서 작성 */
    table th {
        padding: 15px 20px;
    }

    .sub-menu {
        color: #222;
    }
</style>
<div class="resume-info-wrap pt-80">
    <div class="container my-5 py-5 pt-80 d-flex">
        <div class="d-flex">
            {{> layout/sidebar}}
            {{#resume}}
            <form action="/resume/{{id}}/update" method="post">
                <div class="container ft-18">
                    <input type="hidden" name="id" value="{{sessionUser.id}}">
                    <div class="">
                        <div class="mb-3 ft-18">
                            <div class="card-header resume-info-hdtitle">기본 정보</div>
                            <hr>
                            <div class="card-body d-flex">
                                <div class="resume-info-img col-3 mt-3" style="text-align: center;">
                                    <img class="" src="/upload/{{imgFileName}}" alt="" srcset=""
                                         style="width: 80%; height: auto;" id="photo">

                                </div>
                                <div class="resume-info-txt">
                                    <table>
                                        <tr>
                                            <th>이름</th>
                                            <td>{{myName}}</td>
                                        </tr>
                                        <tr>
                                            <th>생년월일</th>
                                            <td>{{birth}}</td>
                                        </tr>
                                        <tr>
                                            <th>연락처</th>
                                            <td>{{phone}}</td>
                                        </tr>
                                        <tr>
                                            <th>E-mail</th>
                                            <td>{{email}}</td>
                                        </tr>
                                        <tr>
                                            <th>주소</th>
                                            <td>{{address}}</td>
                                        </tr>
                                        <tr>
                                            <th>희망 근무지역</th>
                                            <td>
                                                <select class="form-select" name="area" id="area">
                                                    <option selected>{{area}}</option>
                                                    <option value="seoul">서울특별시</option>
                                                    <option value="busan">부산광역시</option>
                                                    <option value="incheon">인천광역시</option>
                                                    <option value="gwangju">광주광역시</option>
                                                    <option value="daejeon">대전광역시</option>
                                                </select>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="card border-light mb-3">
                            <div class="card-header resume-info-hdtitle">이력서 제목</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="form-group">
                                        <input type="text" name="title" id="title" class="form-control"
                                               value="">
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="card border-light mb-3">
                            <div class="card-header resume-info-hdtitle">학력 사항</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <select class="form-select" name="edu" id="edu">
                                        <option selected>{{edu}}</option>
                                        <option value="대졸">대졸</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card border-light mb-3">
                            <div class="card-header resume-info-hdtitle">경력 사항</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <select class="form-select" name="career" id="career">
                                        <option selected>{{career}}</option>
                                        <option value="middle">미들(4~8년)</option>
                                        <option value="senior">시니어(10년 이상)</option>
                                    </select>
                                </div>
                            </div>
                            <div class="card border-light mb-3">
                                <div class="card-header resume-info-hdtitle">보유 기술</div>
                                <div class="card-body">
                                    <div class="row my-3 my-border">

                                        <ul class="row technic">
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="Java">Java
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="JavaScrip">JavaScrip
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="Spring">Spring
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="HTML">HTML
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="jquery">jquery
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="JSP">JSP
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="Vue.js">Vue.js
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="Oracle">Oracle
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="MysQL">MysQL
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skills"
                                                           value="React">React
                                                </label>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="card border-light mb-3">
                                        <div class="card-header resume-info-hdtitle">자기소개서</div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <textarea class="form-control" name="introduce" id="introduce"
                                                          rows="3">introduce</textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card border-light mb-3">
                                        <div class="card-header resume-info-hdtitle">링크</div>
                                        <div class="card-body">
                                            <div class="form-group">
                                                <input type="text" name="portLink" id="portLink" class="form-control"
                                                       value="portLink">
                                            </div>
                                        </div>
                                    </div>


<!--
                                    <div class="card border-light mb-3">
                                        <div class="card-header">이력서 공개 여부</div>
                                        <div class="card-body">
                                            <fieldset class="form-group">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="isPublic"
                                                           id="isPublic"
                                                           value=1 checked="">
                                                    <label class="form-check-label" for="optionsRadios1">
                                                        공개
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="isPublic"
                                                           id="isPublic"
                                                           value="0">
                                                    <label class="form-check-label" for="optionsRadios2">
                                                        비공개
                                                    </label>
                                                </div>
                                            </fieldset>

                                        </div>
                                    </div>
                                    -->
                                </div>
                            </div>
                        </div>
                        <div class="card border-light mb-3">
                            <div class="card-header">자기소개서</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <textarea class="form-control" name="introduce" id="introduce" rows="3">{{introduce}}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="card border-light mb-3">
                            <div class="card-header">링크</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <input type="text" name="portLink" id="portLink" class="form-control" value="{{portLink}}">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            {{/resume}}
            <div class="rButton">
                <div id="resume-remove" class="d-flex justify-content-center" style="align-items: center;">
                    <div class="">
                        <button type="submit" class="btn btn-mint w-100">이력서 수정 완료</button>
                    </div>
                </div>
            </div>
        </form>
        </div>
    </div>
</div>
{{> layout/footer}}