{{> layout/header}}

<style>
    /* 이력서 작성 */
    table th {
        padding: 15px 20px;
    }

    .sub-menu {
        color: #222;
    }
</style>
<div class="resume-info-wrap pt-80">
    <div class="container my-5 py-5 pt-80 d-flex">
        <div class="d-flex">
            {{> layout/sidebar}}
            {{#resume}}
            <form action="/resume/{{id}}/update" method="post">
                <div class="container ft-18">
                    <input type="hidden" name="id" value="{{sessionUser.id}}">
                    <div class="">
                        <div class="mb-3 ft-18">
                            <div class="card-header resume-info-hdtitle">기본 정보</div>
                            <hr>

                            <div class="card-body d-flex">
                                <div class="resume-info-img col-3 mt-3" style="text-align: center;">
                                    <img class="" src="/upload/{{sessionUser.imgFileName}}" alt="" srcset=""
                                         style="width: 80%; height: auto;" id="photo">

                                </div>
                                <div class="resume-info-txt">
                                    <table>
                                        <tr>
                                            <th>이름</th>
                                            <td>{{sessionUser.myName}}</td>
                                        </tr>
                                        <tr>
                                            <th>생년월일</th>
                                            <td>{{sessionUser.birth}}</td>
                                        </tr>
                                        <tr>
                                            <th>연락처</th>
                                            <td>{{sessionUser.phone}}</td>
                                        </tr>
                                        <tr>
                                            <th>E-mail</th>
                                            <td>{{sessionUser.email}}</td>
                                        </tr>
                                        <tr>
                                            <th>주소</th>
                                            <td>{{sessionUser.address}}</td>
                                        </tr>
                                        <tr>
                                            <th>희망 근무지역</th>
                                            <td>
                                                <select class="form-select" name="area" id="area">
                                                    <option selected>{{area}}</option>
                                                    <option value="서울">서울특별시</option>
                                                    <option value="부산광">부산광역시</option>
                                                    <option value="인천">인천광역시</option>
                                                    <option value="광주">광주광역시</option>
                                                    <option value="대전">대전광역시</option>
                                                </select>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="card border-light mb-3">
                            <div class="card-header resume-info-hdtitle">이력서 제목<span style="color: red">(필수)</span></div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="form-group">
                                        <input type="text" name="title" id="title" class="form-control"
                                               value="{{title}}">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-light mb-3">
                            <div class="card-header resume-info-hdtitle">학력 사항<span style="color: red">(필수)</span></div>
                            <div class="card-body">
                                <div class="form-group">
                                    <select class="form-select" name="edu" id="edu">
                                        <option selected>{{edu}}</option>
                                        <option value="고졸">고졸</option>
                                        <option value="대졸">대졸</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card border-light mb-3">
                            <div class="card-header resume-info-hdtitle">경력 사항<span style="color: red">(필수)</span></div>
                            <div class="card-body">
                                <div class="form-group">
                                    <select class="form-select" name="career" id="career">
                                        <option selected>{{career}}</option>
                                        <option value="신입">신입</option>
                                        <option value="미들">미들(4~8년)</option>
                                        <option value="시니어">시니어(10년 이상)</option>
                                    </select>
                                </div>
                            </div>
                            <div class="card border-light mb-3">
                                <div class="card-header resume-info-hdtitle">보유 기술<span style="color: red">(필수)</span></div>
                                <div class="card-body">
                                    <div class="row my-3 my-border">

                                        <ul class="row technic">
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.java}}checked{{/skillChecked.java}}
                                                           value="Java">Java
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.javaScript}}checked{{/skillChecked.javaScript}}
                                                           value="JavaScrip">JavaScrip
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.spring}}checked{{/skillChecked.spring}}
                                                           value="Spring">Spring
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.htmlCss}}checked{{/skillChecked.htmlCss}}
                                                           value="HTML">HTML
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.jquery}}checked{{/skillChecked.jquery}}
                                                           value="jquery">jquery
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.jsp}}checked{{/skillChecked.jsp}}
                                                           value="JSP">JSP
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.vueJs}}checked{{/skillChecked.vueJs}}
                                                           value="Vue.js">Vue.js
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.oracle}}checked{{/skillChecked.oracle}}
                                                           value="Oracle">Oracle
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.mySql}}checked{{/skillChecked.mySql}}
                                                           value="MysQL">MysQL
                                                </label>
                                            </li>
                                            <li class="col-2 form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="skill"
                                                           {{#skillChecked.react}}checked{{/skillChecked.react}}
                                                           value="React">React
                                                </label>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card border-light mb-3">
                            <div class="card-header">자기소개서<span style="color: red">(필수)</span></div>
                            <div class="card-body">
                                <div class="form-group">
                                    <textarea class="form-control" name="introduce" id="introduce" rows="3">{{resume.introduce}}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="card border-light mb-3">
                            <div class="card-header">링크</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <input type="text" name="portLink" id="portLink" class="form-control" value="{{resume.portLink}}">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            {{/resume}}

                <div class="rButton">
                    <div id="resume-remove" class="d-flex justify-content-center" style="align-items: center;">
                        <div class="">
                            <button type="submit" class="btn btn-mint w-100">이력서 수정 완료</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{> layout/footer}}