{{> layout/header}}

<style>
    /*이력서 작성*/
    table th {
        padding: 15px 20px;
    }
    .container form{
        width:100%;
    }

    .sub-menu {
        color: #222;
    }
</style>

<div class="mx-auto pt-80">
    <div class="new-flex-wrapper">
        <div class="new-container">

            {{> layout/sidebar}}

            <!--이력서 작성 폼-->
            <div class="my-4 layer2-right-container"
                 style="flex: 0 0 auto; width: calc(100% - 300px); padding:  0 !important;">
                <div class="container ft-18">

                    <form action="/resume/save" method="post" enctype="application/x-www-form-urlencoded">
                        <input type="hidden" value="{{sessionUser.id}}" name="userId">
                        <div class="">
                            <!-- <div class="title">
                                <h2>이력서 작성</h2>
                            </div>
                            <hr> -->
                            <div class=" mb-3 ft-18">
                                <div class="card-header resume-info-hdtitle">기본 정보</div>
                                <hr>
                                <div class="card-body d-flex">
                                    <div class="resume-info-img col-3 mt-3" style="text-align: center;">
                                        <img class="" src="" alt="" srcset=""
                                             style="width: 80%; height: auto;" id="imgFileName" value="{{sessionUser.imgFileName}}">
                                    </div>

                                    <div class="resume-info-txt">

                                        <table>
                                            <tr>
                                                <th>이름</th>
                                                <td>{{sessionUser.myName}}</td>
                                            </tr>
                                            <tr>
                                                <th>생년월일</th>
                                                <td>{{sessionUser.birth}}</td>
                                            </tr>
                                            <tr>
                                                <th>연락처</th>
                                                <td>{{sessionUser.phone}}</td>
                                            </tr>
                                            <tr>
                                                <th>E-mail</th>
                                                <td>{{sessionUser.email}}</td>
                                            </tr>
                                            <tr>
                                                <th>주소</th>
                                                <td>{{sessionUser.address}}</td>
                                            </tr>

                                            <tr>
                                                <th>희망 근무 지역</th>
                                                <td>
                                                    <select class="form-select" name="area" id="area">
                                                        <option selected>지역</option>
                                                        <option selected disabled>지역별</option>
                                                        <option value="seoul">서울특별시</option>
                                                        <option value="busan">부산광역시</option>
                                                        <option value="incheon">인천광역시</option>
                                                        <option value="gwangju">광주광역시</option>
                                                        <option value="daejeon">대전광역시</option>
                                                    </select>
                                                </td>
                                            </tr>
                                        </table>

                                    </div>
                                </div>


                                <div class="card border-light mb-3">
                                    <div class="card-header resume-info-hdtitle">이력서 제목</div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <input type="text" name="title" id="title" class="form-control">
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="card border-light mb-3">
                                    <div class="card-header resume-info-hdtitle">학력 사항</div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <select class="form-select" name="edu" id="edu">
                                                <option selected>학력</option>
                                                <option value="고졸">고졸</option>
                                                <option value="대졸">대졸</option>

                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="card border-light mb-3">
                                    <div class="card-header resume-info-hdtitle">경력 사항</div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <select class="form-select" name="career" id="career">
                                                <option selected>경력별</option>
                                                <option value="new">신입</option>
                                                <option value="middle">미들(4~8년)</option>
                                                <option value="senior">시니어(10년 이상)</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="card border-light mb-3">
                                    <div class="card-header resume-info-hdtitle">보유 기술</div>
                                    <div class="card-body">
                                        <div class="row my-3 my-border">

                                            <ul class="row technic">
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="Java">Java
                                                    </label>
                                                </li>
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="JavaScrip">JavaScrip
                                                    </label>
                                                </li>
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="Spring">Spring
                                                    </label>
                                                </li>
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="HTML">HTML
                                                    </label>
                                                </li>
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="jquery">jquery
                                                    </label>
                                                </li>
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="JSP">JSP
                                                    </label>
                                                </li>
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="Vue.js">Vue.js
                                                    </label>
                                                </li>
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="Oracle">Oracle
                                                    </label>
                                                </li>
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="MysQL">MysQL
                                                    </label>
                                                </li>
                                                <li class="col-2 form-check">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" name="skill"
                                                               value="React">React
                                                    </label>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                        <div class="card border-light mb-3">
                                            <div class="card-header resume-info-hdtitle">자기소개서</div>
                                            <div class="card-body">
                                                <div class="form-group">
                                                <textarea class="form-control" name="introduce" id="introduce"
                                                          rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="card border-light mb-3">
                                            <div class="card-header resume-info-hdtitle">링크</div>
                                            <div class="card-body">
                                                <div class="form-group">
                                                    <input type="text" name="portLink" id="portLink"
                                                           class="form-control">
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                            </div>


                        <!--저장 버튼-->
                        <div class="rButton">
                            <div id="resume-remove" class="d-flex justify-content-center" style="align-items: center;">
                                <div class="">
                                    <button class="btn btn-mint w-100">이력서 저장</button>
                                </div>
                            </div>
                        </div>
                        <!--저장 버튼-->
                    </form>

                </div>
            </div>
            <!--이력서 작성 폼-->
            </form>


        </div>
    </div>
</div>
</div>
</div>
</div>



{{> layout/footer}}