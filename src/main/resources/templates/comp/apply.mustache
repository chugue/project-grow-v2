{{> layout/compheader}}

<div style="margin-top: 130px; min-height: 600px;" class="mx-auto">
    <div>
        <div class="new-container my-5 py-5 pt-80">
            {{> comp/comp-sidebar}}

            <div id="content" class="my-4 layer2-right-container" style="flex: 0 0 auto; width: calc(100% - 270px);">
                <div class="components">
                    <div class="components-div p-tb-10 d-flex justify-content-between">
                        <div class="font mb-3"">전체</div>
                    </div>
                    <div class="components-div">
                        <table class="table table-hover offer-table scroll" style="text-align: center; border-top:2px solid #ddd">
                            <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">현재 열린 공고</th>
                                <th scope="col">포지션</th>
                                <th scope="col">경력</th>
                                <th scope="col">공고관련</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#jobList}}
                                <tr class="offer-table" style="text-align: center">
                                    <td>{{id}}</td>
                                    <td class="col-3" style="text-align: center">
                                        <div style="text-align: start">{{title}}</div>
                                        <div class="new-skill-box">
                                            {{#skillList}}
                                                <div class="{{color}}">{{name}}</div>
                                            {{/skillList}}
                                        </div>
                                    </td>
                                    <td>{{task}}</td>
                                    <td>{{career}}</td>
                                    <!--공고 관련 버튼-->
                                    <!--여기 UI부분 눈을 헤쳐서 고쳤어요-->
                                    <td class="col-3 ">
                                        <div class="new-create-button">
                                            <a href="/comp/{{sessionComp.id}}/apply?jobsId={{id}}">
                                            <button type="button" class="btn btn-mint offer-table-btn">제안한 이력서</button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {{/jobList}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="components" style="height: 50px;"></div>
                <div class="components">
                    <div class="font mb-3">제안자현황</div>
                    <div>
                        <table class="table table-hover offer-table scroll" style="text-align: center; border-top:2px solid #ddd">
                            <thead>
                            <!--여기 UI부분 눈을 헤쳐서 고쳤어요-->
                            <tr>
                                <th class="center-align col">No</th>
                                <th class="center-align col-2">이름</th>
                                <th class="center-align col">이력서 제목</th>
                                <th class="center-align col-2">경력</th>
                                <th class="center-align col">주요 기술</th>
                                <th class="center-align col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#applyList}}
                                <tr class="offer-table">
                                    <th scope="row">{{id}}</th>
                                    <td>{{myName}}</td>
                                    <td>{{title}}</td>
                                    <td>{{career}}</td>
                                    <td>
                                        <div class="new-skill-box">
                                            {{#skillList}}
                                                <div class="{{color}}">{{name}}</div>
                                            {{/skillList}}
                                        </div>
                                    </td>
                                    <td>
                                        <div class="new-create-button">
                                            <form action="/resume/resumeDetail/{{id}}">
                                                <input type="hidden" name="jobsId" value="{{jobsId}}">
                                                <button type="submit" class="btn btn-mint offer-table-btn">상세보기</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {{/applyList}}
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">비밀번호 인증</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="inputPassword" aria-describedby="passwordHelp"
                               onkeypress="if(event.keyCode=='13'){event.preventDefault(); checkPS(`${compSession.compId}`);}">
                        <div id="passwordHelp" class="form-text">현재 비밀번호를 입력해 주세요.</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary"
                        onclick="passwordCheckBtn(`${compSession.compId}`)">Check
                </button>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}